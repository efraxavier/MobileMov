<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edSInicial"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="326dp"
        android:ems="10"
        android:hint="@string/s_inicial"
        android:importantForAutofill="no"
        android:inputType="numberSigned|numberDecimal"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/tvRes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edVelocidade"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="@string/velocidade"
        android:importantForAutofill="no"
        android:inputType="numberSigned|numberDecimal"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintStart_toStartOf="@+id/edSInicial"
        app:layout_constraintTop_toBottomOf="@+id/edSInicial" />

    <EditText
        android:id="@+id/edTempo"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/tempo"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textColorHint="#000000"
        app:layout_constraintStart_toStartOf="@+id/edVelocidade"
        app:layout_constraintTop_toBottomOf="@+id/edVelocidade" />

    <Button
        android:id="@+id/btnCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:hint="@string/calcular"
        android:text="@string/calcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edTempo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRes"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="228dp"
        android:text="@string/s_final"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnCalc"
        app:layout_constraintTop_toBottomOf="@+id/edSInicial" />

</androidx.constraintlayout.widget.ConstraintLayout>